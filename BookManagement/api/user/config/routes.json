{
  "routes": {
    "GET /user": {
      "controller": "User",
      "action": "find",
      "policies": [
        "isAuthorized"
      ]
    },
    "GET /user/:id": {
      "controller": "User",
      "action": "findOne",
      "policies": [
        "isAuthorized"
      ]
    },
    "POST /user": {
      "controller": "User",
      "action": "create",
      "policies": [
        "isAuthorized",
        "addDataCreate",
        "deleteRoles"
      ]
    },
    "PUT /user/:id": {
      "controller": "User",
      "action": "update",
      "policies": [
        "isAuthorized",
        "addDataUpdate",
        "deleteRoles"
      ]
    },
    "DELETE /user/:id": {
      "controller": "User",
      "action": "destroy",
      "policies": [
        "isAuthorized"
      ]
    },
    "POST /user/:parentId/:relation": {
      "controller": "User",
      "action": "add",
      "policies": [
        "isAuthorized",
        "addDataCreate",
        "userAddOrRemoveRole"
      ]
    },
    "DELETE /user/:parentId/:relation/:id": {
      "controller": "User",
      "action": "remove",
      "policies": [
        "isAuthorized",
        "addDataUpdate",
        "userAddOrRemoveRole"
      ]
    },
    "POST /auth/logout": {
      "controller": "Auth",
      "action": "logout"
    },
    "POST /auth/forgot-password": {
      "controller": "Auth",
      "action": "forgotPassword"
    },
    "POST /auth/change-password": {
      "controller": "Auth",
      "action": "changePassword"
    },
    "POST /auth/local": {
      "controller": "Auth",
      "action": "callback"
    },
    "POST /auth/local/register": {
      "controller": "Auth",
      "action": "register"
    },
    "GET /auth/:provider/callback": {
      "controller": "Auth",
      "action": "callback"
    }
  }
}
